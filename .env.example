# Alumni Management System - Environment Variables
# ================================================
# Copy this file to .env and fill in your values
# NEVER commit the .env file to version control!

# =============================================================================
# Database Configuration (PostgreSQL)
# =============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=alumni_db
DB_USER=postgres
DB_PASSWORD=your_secure_password_here

# Connection pool settings (optional)
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30

# =============================================================================
# LinkedIn Scraper Configuration
# =============================================================================
LINKEDIN_EMAIL=your_linkedin_email@example.com
LINKEDIN_PASSWORD=your_linkedin_password

# Scraper behavior settings
SCRAPER_HEADLESS=true
SCRAPER_SLOW_MO=100
SCRAPER_TIMEOUT=30000
SCRAPER_MAX_RETRIES=3
SCRAPER_MIN_DELAY=5
SCRAPER_MAX_DELAY=15

# =============================================================================
# Backblaze B2 Storage Configuration
# =============================================================================
B2_APPLICATION_KEY_ID=your_b2_key_id
B2_APPLICATION_KEY=your_b2_application_key
B2_BUCKET_NAME=alumni-pdfs
B2_BUCKET_ID=your_bucket_id

# =============================================================================
# Chatbot Configuration (Optional - for advanced NLP)
# =============================================================================
# OPENAI_API_KEY=sk-your-openai-api-key
# OPENAI_MODEL=gpt-3.5-turbo
CHATBOT_MAX_RESULTS=10
CHATBOT_CONFIDENCE_THRESHOLD=0.5

